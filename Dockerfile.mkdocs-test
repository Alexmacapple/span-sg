FROM squidfunk/mkdocs-material:9.5

# Installer build-essentials pour compiler libsass (Alpine Linux)
# Note: gcc/g++ nécessaires pour mkdocs-with-pdf (libsass compilation)
RUN apk add --no-cache \
    gcc \
    g++ \
    musl-dev \
    python3-dev

WORKDIR /docs

# Copier requirements et installer dépendances
# Layer séparé pour optimiser cache Docker (invalide uniquement si requirements.txt change)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

CMD ["mkdocs", "serve", "--dev-addr=0.0.0.0:8000"]
